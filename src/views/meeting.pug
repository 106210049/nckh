          //-   button.audio-control Mute
          //-   button.video-control Stop Video
          //-   button.share-screen Share Screen
          //-   button.participants Participants

    // Trong file JavaScript
    script.
      function toggleChatBox() {
        const chatBox = document.getElementById('openChat');
        // Loại bỏ lớp hidden khi nút được nhấn
        if (chatBox.classList.contains('hidden')) {
          chatBox.classList.remove('hidden');
        } else {
          chatBox.classList.add('hidden');
        }
      }
    script(src='/mjs/api.js')
    script(src="/mjs/script.js")

    